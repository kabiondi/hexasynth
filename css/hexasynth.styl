// Compile CSS: stylus -w hexasynth.styl -o hexasynth.css

// fonts
@import url('https://fonts.googleapis.com/css?family=Quicksand');
@import url('https://fonts.googleapis.com/css?family=Monoton');

// variables
hex-color = rgb(43, 119, 197);

// mixins
hex-ratio(n)
  52px * n

html
  background: radial-gradient(ellipse at bottom, #16d4a8 0%, #090A0F 100%)
  height: 100%;
body
  font-family: Quicksand;
  color: #2b77c5;
  height: 100%;
  opacity: 0.5;
  margin: 0;
  background-color: rgb(0, 0, 17, 0.9);
.title
  font-family: Monoton;
  text-align: center;
  font-size: 40px;
  padding-top: 30px;
  padding-bottom: 30px;
.center
  width: hex-ratio(11);
  margin: 0 auto;
.hex-row
  clear: left;
  padding-top: hex-ratio(5/104);
.hex-row.a-row
  margin-left: hex-ratio(56/104);
.hex-row.z-row
  padding-top: hex-ratio(4/104);
  margin-left: hex-ratio(112/104);
.hex:before
  content: " ";
  width: 0; height: 0;
  border-bottom: hex-ratio(30/104) solid hex-color;
  border-left: hex-ratio(52/104) solid transparent;
  border-right: hex-ratio(52/104) solid transparent;
  position: absolute;
  top: hex-ratio(-30/104);
.hex
  float: left;
  margin-left: hex-ratio(8/104);
  margin-bottom: hex-ratio(-26/104);
  margin-top: hex-ratio(60/104);
  width: hex-ratio(1);
  height: hex-ratio(60/104);
  background-color: hex-color;
  opacity: 0.5;
  position: relative;
.hex:after
  content: "";
  width: 0;
  position: absolute;
  bottom: hex-ratio(-30/104);
  border-top: hex-ratio(30/104) solid hex-color;
  border-left: hex-ratio(52/104) solid transparent;
  border-right: hex-ratio(52/104) solid transparent;
colors = {
  hot1: rgb(100, 122, 197),
  hot2: rgb(130, 124, 205),
  hot3: rgb(150, 126, 210),
  hot4: rgb(180, 128, 215),
  hot5: rgb(210, 130, 220),
  hot6: rgb(230, 132, 225),
  hot7: rgb(240, 134, 230),
  hot8: rgb(245, 136, 240),
  hot9: rgb(250, 138, 250),
  hot10: rgb(255, 140, 255)
}
for class, color in colors
  .hex.{class}
    background-color: color
    &:before
      border-bottom-color: color
    &:after
      border-top-color: color

.controls
  margin-bottom: 10px;
.oscillator {
  padding: 10px;
  display inline-block;
  border: 1px solid #633ca9;
  border-radius: 5px;
}
.control-title
  margin-bottom: 10px;
.osc-waveform {
  font-size: 10px;
  display: inline-block;
}
.switch {
  position: relative;
  display: inline-block;
  width: 3.4em;
  height: 4em;
}

/* Hide default HTML checkbox */
.switch input {display:none;}
  
.switch
  span
    border-radius: 3px;

/* The slider */
.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #2b77c5;
  border: 1px solid #0b5a5a;
  -webkit-transition: .2s;
  transition: .2s;
}

.slider:before {
  position: absolute;
  font-size: 5em;
  line-height: 0.25em;
  text-align: center;
  border-radius: 2px;
  content: "\00b7";
  height: 0.4em;
  width: 0.55em;
  left: 0.04em;
  bottom: 0.06em;
  background-color: #18383c;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .slider {
  background-color: #16b1b1;
}

input:checked + .slider:before {
  color: #ff0099;
  background-color: #18383c;
  -webkit-transform: translateY(-0.25em);
  -ms-transform: translateY(-0.25em);
  transform: translateY(-0.25em);
}